/*************************************************************************************/
Replace all of the ' ' in a string with '%20'.
Example: Input: "hello world ",
Output: "hello%20world%20".
/*************************************************************************************/

class Solution {
public:
    	void ReplaceBlank(char str[], int length)
	{
		int i=0;
		if(length<0 || str==NULL)
			return ;
		int originLength=0, newLength=0, blankNum=0;
		while(str[i]!='\0')
		{
			originLength++;
			if(str[i]==' ')
				blankNum++;
			i++;
		}

		newLength=originLength+blankNum*2;

		//overflow
		if(newLength>length)
			return;					

		int leftPoint=originLength;  //include the '\0'
		int rightPoint=newLength;  //include the '\0'

		while(leftPoint>=0)
		{
			if(str[leftPoint]==' ')
			{
				str[rightPoint--]='0';
				str[rightPoint--]='2';
				str[rightPoint--]='%';
			}
			else
				str[rightPoint--]=str[leftPoint];
			leftPoint--;
		}

    }
};

int main()
{
	Solution s;
	int length=100;
	char str[length]=" he llo wo rld gt";
	s.ReplaceBlank(str,length);
	cout<<str;
}
