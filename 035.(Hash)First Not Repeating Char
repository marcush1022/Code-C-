/*******************************************************************************************************/
Find the first not repeating char in a string.
Example: input-->"abaccdef"
output-->b
/*******************************************************************************************************/

class Solution {
public:
	char firstNotRepeatingChar(char* str)
	{
	    	cout<<str<<endl;
		int ex[256];
		memset(ex, 0, sizeof(ex));
		cout<<sizeof(ex)<<endl;
		for(int i=0; str[i]!='\0'; i++)
        	{
            		ex[str[i]]++;
        	}


		for(int i=0; str[i]!='\0'; i++)
		{
			if(ex[str[i]]==1)
            		{
                		return str[i];
            		}
		}
		return '\0';
	}
};

int main()
{
	Solution s;
	cout<<s.firstNotRepeatingChar("eaabcciffik");
}
