/*******************************************************************/
Get all permutations of a string "abcd" like "abdc", "acbd"....
/*******************************************************************/

class Solution5
{
	public:
	void getStringPermute(vector<string> &ret, string &str, int begin)
	{
		if(begin<str.length())
		{
			for(int i=begin; i<str.length(); i++)
			{
				int tmp=str[begin];
				str[begin]=str[i];
				str[i]=tmp;

				getStringPermute(ret, str, begin+1);

				tmp=str[begin];
				str[begin]=str[i];
				str[i]=tmp;
			}
		}
		else
			ret.push_back(str);
	}

	vector<string> stringPremute(string &str)
	{
		vector<string> ret;
		if(str.length()==0)
			return ret;
		int begin=0;
		getStringPermute(ret, str, begin);
		return ret;
	}
};

int main()
{
	Solution5 s;
	string str="abc";
	vector<string> ret;
	ret=s.stringPremute(str);
	for(int i=0; i<ret.size(); i++)
        cout<<ret[i]<<endl;
	return 0;
}
