/*********************************************************************************/
给一个数n，问n的binary形式中1的个数是多少，举例5，return 2
/*********************************************************************************/

int getNumof1(long num)
{
    if(num<0)
        num=-num;
	int count=0;
	while(num!=0)
	{
	    if(num%2!=0)
			count++;
		num=num>>1;

	}
	return count;
}

int main()
{
	cout<<getNumof1(0);
}

